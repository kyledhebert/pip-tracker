    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "core-js": "^2.4.1",
    "electron": "^1.7.9",
    "electron-build": "0.0.3",
    "electron-packager": "^10.1.1",
    "lodash": "^4.17.4",
    "materialize-css": "^0.100.2",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.14"
